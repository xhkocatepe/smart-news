            "example": 1
          },
          "returnMessage": {
            "type": "string"
          }
        }
      },
      "SuccessfulResponseWithoutData": {
        "type": "object",
        "title": "SuccessfulResponse",
        "properties": {
          "returnCode": {
            "type": "number",
            "default": 0,
            "example": 0
          },
          "data": {
            "type": "object"
          }
        },
        "required": [
          "returnCode"
        ]
      },
      "TokenResponse": {
        "x-examples": {},
        "type": "object",
        "properties": {
          "returnCode": {
            "type": "number",
            "example": 0
          },
          "data": {
            "type": "object",
